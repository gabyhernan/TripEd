<h1>New Trip</h1>

<%= form_for @trip do |f| %>

  <div class="field">
    <%= f.hidden_field :user_id, value: nil %>
  </div>

  <div class="field">
    <%= f.hidden_field :location_id, value: @session %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= f.date_field :date %>
  </div>

  <div class="field">
    <%= f.label :start_time %>
    <%= f.text_field :start_time %>
  </div>

  <div class="field">
    <%= f.hidden_field :reserved, value: false %>
  </div>

  <div class="actions">
    <%= submit_tag "Submit", class:"waves-effect waves- btn" %>
  </div>


<% end %>

<%= link_to 'Back', locations_path, class:"waves-effect waves- btn white-text" %>
